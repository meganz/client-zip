{
  "compilerOptions": {
    "baseUrl": "src",
    "moduleResolution": "node",
    "module": "ES2015",
    "target": "ES2018",
    "strictFunctionTypes": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "lib": [
      "es2018",
      "WebWorker",
      "es2020.bigint"
    ],
    "paths": {
      "*.ts": ["*"]
    }
  },
  "include": ["src/*.ts"],
}
